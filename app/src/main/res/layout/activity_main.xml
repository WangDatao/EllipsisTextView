    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.easy.lindatao.ellipsistextview.MainActivity">

    <com.easy.lindatao.ellipsistextview.widget.EllipsisTextView
        android:id="@+id/ellipsis_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:maxLine="2"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="在ListView中测试"/>
    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>
</RelativeLayout>
